<Window x:Class="vpr_mp3player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vpr_mp3player"
        mc:Ignorable="d"
        xmlns:controls="clr-namespace:vpr_mp3player.Controls"
        Title="MainWindow" Height="600" Width="1000">
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label x:Name="lblTitle" HorizontalContentAlignment="Center" Content="TITEL" VerticalAlignment="Top" Height="52" FontSize="36"/>
            <Label x:Name="lblArtistName" HorizontalContentAlignment="Center" Content="Artist" VerticalAlignment="Top" Height="30" HorizontalAlignment="Center" Width="342"/>
            <Image x:Name="imgThumb" HorizontalAlignment="Center" Height="270" Width="276"/>
        </StackPanel>
        <controls:MusicControl Margin="0,0,10,0" />
    </Grid>
</Window>
